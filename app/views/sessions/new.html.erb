<h1 class="text-center">Login to Group Transaction</h1>
<div class="row">
    
    <div class="col-xs-1 col-md-3"></div>
    <div class="col-xs-10 col-md-6 ">
    
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

            <div class="form-group">
                <%= f.label :username %>
                <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Enter your username", class: "form-control" %>
            </div>
            <%= f.submit "Log in", class: 'btn btn-primary' %>

        <% end %>

    </div>
    <div class="col-xs-1 col-md-3 "></div>

</div>
